{
  "builds": [
    {
      "src": "app/server.py",
      "use": "@vercel/python",
      "config": { "includeFiles": ["requirements.txt"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/server.py",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    }
  ]
}
